<%- include("./includes/head.ejs"); %>
  
  <style>
    .first_cont {
      height: 100vh;
    }

    .g_footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
    }
    
    .footer_a {
      text-decoration: none;
      color: grey;
      font-size: 16px;
      text-transform: uppercase;
      font-weight: bold;
      transition: color 0.3s, transform 0.3s; /* Smooth transitions */
    }

    .footer_a:hover {
      color: black !important; /* Hover color */
      transform: translateY(-5px); /* Small hover animation */
    }
    
    @media (max-width: 800px) {
      .first_cont {
        margin-bottom: 80px;
      }
    }
    
    @media (max-width: 600px) {
      .first_cont {
        margin-bottom: 200px;
      }
      
      .g_footer {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
      }
      
      .g_footer div {
        margin-bottom: 10px;
        margin-right: 30px;
      }
      
      .footer_a {
        font-size: 14px;
      }
    }
  </style>
  
  <header>
		<%- include("./includes/header.ejs"); %>
	</header>
    
  <section>
    <div class="container pe-4 ps-4 pt-1 pb-1 first_cont">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-4"></div>

        <div class="col-12 col-sm-4 pt-5">
          <div class="col-12 text-center mt-3 mb-3">
            <% if (success_msg != '') { %>
                <div class="alert alert-success" role="alert"><%= success_msg %></div>
            <% } %>

            <% if (error_msg != '') { %>
                <div class="alert alert-danger" role="alert"><%= error_msg %></div>
            <% } %>
          </div>

          <div class="col-12 d-flex justify-content-center">
            <div class="text-center" style="border: 2px solid red; border-radius: 50px; padding: 10px;">
              <i class="fa-solid fa-check fa-xl" style="color: red;"></i>
            </div>
          </div>

          <div class="col-12 text-center mt-4">
              Step 3 of 4
          </div>

          <div class="col-12">
            <table class="table table-borderless">
              <thead>
                <tr>
                  <th scope="col"></th>
                  <th scope="col" style="padding-left: 0; padding-right: 0;">
                    <h3>Choose your plan.</h3>
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-0">
                  <td class="text-end pe-0 ps-0" style="padding-top: 11px; font-size: 19px;">
                    <i class="fa-solid fa-check fa-xl" style="color: red;"></i>
                  </td>
                  <td>
                    <span class="ms-1" style="font-size: 19px; letter-spacing: 0.4px;">No commitments, cancel anytime.</span>
                  </td>
                </tr>
                <tr>
                  <td class="text-end pe-0 ps-0" style="padding-top: 11px; font-size: 19px;">
                    <i class="fa-solid fa-check fa-xl" style="color: red;"></i>
                  </td>
                  <td>
                    <span class="ms-1" style="font-size: 19px; letter-spacing: 0.4px;">Everything on Glowbal for one low price.</span>
                  </td>
                </tr>
                <tr>
                  <td class="text-end pe-0 ps-0" style="padding-top: 11px; font-size: 19px;">
                    <i class="fa-solid fa-check fa-xl" style="color: red;"></i>
                  </td>
                  <td>
                    <span class="ms-1" style="font-size: 19px; letter-spacing: 0.4px;">No ads and no extra fees. Ever</span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="col-12 mt-4">
            <a 
               href="<%= isSuccess ? '/plans' : '#'  %>" 
               class="btn w-100 text-white" 
               style="line-height: 17px; font-weight: 600; background: red; font-size: 18px; padding: 20px 0; letter-spacing: 0.8px;"
            >
              Next
            </a>
          </div>

        </div>

        <div class="col-12 col-sm-4"></div>
      </div>
    </div>
  </section>
              
  <footer>
		<%- include("./includes/footer.ejs"); %>
	</footer>
                
  <script>
    globalThis.document.addEventListener("DOMContentLoaded", function() {
            setTimeout(function() {
                const alertElements = document.querySelectorAll('.alert-success, .alert-danger');
                alertElements.forEach(function(alertElement) {
                    alertElement.style.display = 'none';
                });
            }, 3000); // 3000 milliseconds = 3 seconds
    })
  </script>

<%- include("./includes/end.ejs"); %>